<h1>Display your Pirate here</h1>
<h4>Name: <%= @pirate.name %></h4>
<h4>Weight: <%= @pirate.weight %></h4>
<h4>Height: <%= @pirate.height %></h4>


<h2>Display your first ship here</h2>
<h3>First Ship</h3>
<% @ships.each.with_index do |ship, i| %>
  <% if i == 0 %>
    <ul>
      <li>Name: <%= ship.name %></li>
      <li>Type: <%= ship.type %></li>
      <li>Booty: <%= ship.booty %></li>
    </ul>
  <% end %>
<% end %>


<h2>Display your second ship here</h2>
<h3>Second Ship</h3>
<% @ships.each.with_index do |ship, i| %>
  <% if i == 1 %>
    <ul>
      <li>Name: <%= ship.name %></li>
      <li>Type: <%= ship.type %></li>
      <li>Booty: <%= ship.booty %></li>
    </ul>
  <% end %>
<% end %>