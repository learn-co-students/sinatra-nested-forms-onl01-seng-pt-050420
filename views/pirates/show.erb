<h1>Pirate</h1>
<div class="pirate">
  <h3>Pirate Name: <%= @pirate.name %></h3><br>
  <h4>Pirate Weight: <%= @pirate.weight %></h4><br>
  <h5>Pirate Height: <%= @pirate.height %></h5><br>
</div><br>
 

<h1>Ship 1</h1>
<% @ships.each do |detail| %>
  <div class="ship">
    <p>Ship Name: <%= detail.name %></p><br>
    <p>Ship Type: <%= detail.type %></p><br>
    <p>Ship Booty: <%= detail.booty %></p><br>
  </div><br>
<% end %>

