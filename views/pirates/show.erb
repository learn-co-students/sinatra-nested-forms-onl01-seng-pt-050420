  
<!DOCTYPE html>
<html>
<head>
<title>Pirate</title>
</head>

<body>
<h2> PIRATE </h2>
<div class="pirate">
<p> Name: <%= @pirate.name%></p> <br>
<p>Height:<%= @pirate.height%></p><br>
<p>Weight:<%= @pirate.weight%></p><br>
<div><br>


<h1>Ship One</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
  </div><br>


<h1>Ship Two</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
  </div><br>
</body>
</html>


